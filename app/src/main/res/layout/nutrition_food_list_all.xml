<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nutrition_foodList_all_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/nutrition_foodList_all_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="0.5"
                android:paddingRight="5dp"
                android:textSize="15dp"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nutrition_foodList_all_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="TextView"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/nutrition_foodList_all_carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="TextView"
                android:gravity="center"/>

            <TextView
                android:id="@+id/nutrition_foodList_all_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="TextView"
                android:gravity="right"
                android:paddingRight="5dp"/>
        </TableRow>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Calculator"
    tools:showIn="@layout/app_bar_calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <CheckBox
                android:id="@+id/gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:buttonTint="@color/colorFadeGreen"/>

            <CheckBox
                android:id="@+id/gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:buttonTint="@color/colorFadeGreen"/>
        </LinearLayout>

        <EditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Height (cm)"
            android:inputType="number"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/colorFadeGreen"/>

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Weight (kg)"
            android:inputType="number"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/colorFadeGreen"/>

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/colorFadeGreen"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goal" />

            <CheckBox
                android:id="@+id/goal_fatLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fat Loss"
                android:buttonTint="@color/colorFadeGreen"/>

            <CheckBox
                android:id="@+id/goal_maintainance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maintainence"
                android:buttonTint="@color/colorFadeGreen"/>

            <CheckBox
                android:id="@+id/goal_muscleGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Muscle Gain"
                android:buttonTint="@color/colorFadeGreen"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Level"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <CheckBox
            android:id="@+id/activityLevel_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None ( Sedentary Job)"
            android:buttonTint="@color/colorFadeGreen"/>

        <CheckBox
            android:id="@+id/activityLevel_lightly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lightly (moderate exercise but sedentary job)"
            android:buttonTint="@color/colorFadeGreen"/>

        <CheckBox
            android:id="@+id/activityLevel_moderate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moderate (intese exercise but sedentary job)"
            android:buttonTint="@color/colorFadeGreen"/>

        <CheckBox
            android:id="@+id/activityLevel_very"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Active ( moderate exercise and active job)"
            android:buttonTint="@color/colorFadeGreen"/>

        <CheckBox
            android:id="@+id/activityLevel_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Active ( intese exercise and intese job)"
            android:buttonTint="@color/colorFadeGreen"/>

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="60dp"/>

    </LinearLayout>
</ScrollView>